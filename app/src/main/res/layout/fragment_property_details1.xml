<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PropertyDetailsActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="16dp"
                android:text="Apartment Type*"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/edt_apartment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:hint="Select"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Apartment Name*"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:hint="Apartment"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="BHK Type*"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/edt_bhk"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:hint="Select"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp"
                        android:text="Floor*"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/edt_floor"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/edittext_background"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:hint="Select"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp"
                        android:text="Total Floor*"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/edt_floor_total"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/edittext_background"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:hint="Select"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Property Age*"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/edt_property_age"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:hint="Select"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Carpet area"
                android:textColor="@color/colorBlack" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:hint="Type Here (Car.sq.ft.)"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Property Size"
                android:textColor="@color/colorBlack" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:hint="Type Here (Sq.ft.)"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Number of bathrooms"
                android:textColor="@color/colorBlack" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:hint="00"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Balcony"
                android:textColor="@color/colorBlack" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:hint="00"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Facing"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/edt_facing"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:hint="Select"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Preferred Tenant"
                android:textColor="@color/colorBlack" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetarian" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="Non-Vegetarian" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/dropdown_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/dropdown_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/corner_radius"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_apartment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Apartment Type*"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/text_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Done"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dropdown_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/dropdown_linear" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp" />

        </LinearLayout>

        <Button
            android:id="@+id/save_continue1"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:background="@drawable/button_blue_background"
            android:text="Save &amp; Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
             />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>